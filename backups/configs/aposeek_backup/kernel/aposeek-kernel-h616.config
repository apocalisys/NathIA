# ApoSeek Kernel Configuration for MXQ Pro H616
# Based on 100% verified hardware analysis

# Platform
CONFIG_ARCH_SUNXI=y
CONFIG_MACH_SUN50I_H616=y
CONFIG_ARM64=y

# CPU and SMP
CONFIG_SMP=y
CONFIG_NR_CPUS=4
CONFIG_ARM_CPU_SUSPEND=y

# PMU AXP1530 - CRÍTICO
CONFIG_REGULATOR_AXP1530=y
CONFIG_MFD_AXP1530=y
CONFIG_POWER_SUPPLY=y

# Ethernet GMAC1 - Verificado
CONFIG_SUN8I_EMAC=y
CONFIG_STMMAC_ETH=y
CONFIG_STMMAC_PLATFORM=y

# WiFi Spreadtrum Marlin3 - Verificado
CONFIG_BRCMFMAC=y
CONFIG_BRCMFMAC_SDIO=y
CONFIG_CFG80211=y
CONFIG_MAC80211=y
CONFIG_RFKILL=y

# Bluetooth - Verificado
CONFIG_BT=y
CONFIG_BT_HCIUART=y
CONFIG_BT_HCIUART_BCM=y
CONFIG_BT_BCM=y

# USB para Webcam UVC
CONFIG_USB=y
CONFIG_USB_XHCI_HCD=y
CONFIG_USB_EHCI_HCD=y
CONFIG_USB_OHCI_HCD=y
CONFIG_USB_UVC=y

# Storage
CONFIG_MMC=y
CONFIG_MMC_SUNXI=y
CONFIG_MMC_BLOCK=y

# File systems
CONFIG_EXT4_FS=y
CONFIG_VFAT_FS=y
CONFIG_NLS_CODEPAGE_437=y
CONFIG_NLS_ISO8859_1=y

# Thermal management - CRÍTICO
CONFIG_THERMAL=y
CONFIG_CPU_THERMAL=y
CONFIG_DEVFREQ_THERMAL=y
CONFIG_SUN50I_THERMAL=y

# GPIO y LEDs
CONFIG_GPIO_SYSFS=y
CONFIG_LEDS_GPIO=y
CONFIG_LEDS_CLASS=y
CONFIG_LEDS_TRIGGERS=y
CONFIG_LEDS_TRIGGER_HEARTBEAT=y
CONFIG_LEDS_TRIGGER_NETDEV=y

# Serial console
CONFIG_SERIAL_8250=y
CONFIG_SERIAL_8250_CONSOLE=y

# Kernel features
CONFIG_CMDLINE="console=ttyS0,115200 earlyprintk root=/dev/mmcblk0p2 rootwait"
CONFIG_DEVTMPFS=y
CONFIG_DEVTMPFS_MOUNT=y

# Network
CONFIG_INET=y
CONFIG_IPV6=y
CONFIG_NETDEVICES=y

# Headless optimization - NO graphics/audio
# CONFIG_DRM=n
# CONFIG_SOUND=n
# CONFIG_HID=n

# Debugging
CONFIG_PRINTK_TIME=y
CONFIG_DYNAMIC_DEBUG=y
